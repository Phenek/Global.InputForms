<?xml version="1.0" encoding="UTF-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:global="clr-namespace:Global.InputForms;assembly=Global.InputForms.Maui"
             xmlns:vm="clr-namespace:Sample.ViewModels"
             xmlns:service="clr-namespace:Sample.Services"
             x:Class="Sample.Views.CheckForms"
             BackgroundColor="{StaticResource LightBackgroundColor}">
    <ScrollView >
        <StackLayout
            Margin="30"
            Spacing="20"
            HorizontalOptions="FillAndExpand">

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="40">
                <global:CheckLabel Checked="true"
                                   CheckType="Fill" IconSize="20" CornerRadius="10"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Teal"
                                   CheckedColor="Teal" />

                <global:CheckLabel Checked="true"
                                   CheckType="Fill" IconSize="20" CornerRadius="10"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Maroon"
                                   CheckedColor="Maroon" />

                <global:CheckLabel Checked="true"
                                   CheckType="Fill" IconSize="20" CornerRadius="10"
                                   BackgroundColor="White"
                                   BorderColor="Navy"
                                   CheckedBackgroundColor="White"
                                   CheckedBorderColor="Gray"
                                   CheckedColor="Purple" />

                <global:CheckLabel Checked="true"
                                   CheckType="Fill" IconSize="20" CornerRadius="10"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Olive"
                                   CheckedColor="Olive" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="40">

                <global:CheckLabel Checked="true"
                                   CheckType="Check" IconSize="20"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Teal"
                                   CheckedColor="Teal" />

                <global:CheckLabel Checked="true"
                                   CheckType="Check" IconSize="20"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Maroon"
                                   CheckedColor="Maroon" />

                <global:CheckLabel Checked="true"
                                   CheckType="Check" IconSize="20"
                                   BackgroundColor="White"
                                   BorderColor="Navy"
                                   CheckedBackgroundColor="White"
                                   CheckedBorderColor="Gray"
                                   CheckedColor="Purple" />

                <global:CheckLabel Checked="true"
                                   CheckType="Check" IconSize="20"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Olive"
                                   CheckedColor="Olive" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="40">
                <global:CheckLabel Checked="true"
                                   CheckType="Cross" IconSize="20"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Teal"
                                   CheckedColor="Teal" />
                <global:CheckLabel Checked="true"
                                   CheckType="Cross" IconSize="20"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Maroon"
                                   CheckedColor="Maroon" />
                <global:CheckLabel Checked="true"
                                   CheckType="Cross" IconSize="20"
                                   BackgroundColor="White"
                                   BorderColor="Navy"
                                   CheckedBackgroundColor="White"
                                   CheckedBorderColor="Gray"
                                   CheckedColor="Purple" />
                <global:CheckLabel Checked="true"
                                   CheckType="Cross" IconSize="20"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Olive"
                                   CheckedColor="Olive" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="40">
                <global:CheckLabel Checked="true"
                                   CheckType="Star" IconSize="20"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Teal"
                                   CheckedColor="Teal" />
                <global:CheckLabel Checked="true"
                                   CheckType="Star" IconSize="20"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Maroon"
                                   CheckedColor="Maroon" />
                <global:CheckLabel Checked="true"
                                   CheckType="Star" IconSize="20"
                                   BackgroundColor="White"
                                   BorderColor="Navy"
                                   CheckedBackgroundColor="White"
                                   CheckedBorderColor="Gray"
                                   CheckedColor="Purple" />
                <global:CheckLabel Checked="true"
                                   CheckType="Star" IconSize="20"
                                   BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CheckedBackgroundColor="Transparent"
                                   CheckedBorderColor="Olive"
                                   CheckedColor="Olive" />
            </StackLayout>
            <!-- Simple CheckLabel -->
            <global:CheckLabel Checked="true" Text="Check it!"
                               CheckType="Check" IconSize="20"
                               BackgroundColor="Transparent"
                               BorderColor="Gray"
                               CheckedBackgroundColor="Transparent"
                               CheckedBorderColor="Teal"
                               CheckedColor="Teal" />

            <Label Text="Simple CheckLabel" FontSize="Small" TextColor="Gray"
                   HorizontalTextAlignment="Center" HorizontalOptions="Center" />
            <BoxView BackgroundColor="#eee" HeightRequest="1" Margin="0,10" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="40">
                <global:CheckButton Text="Check it!"
                                    WidthRequest="70" HeightRequest="30" CornerRadius="15" FontSize="12"
                                    BackgroundColor="Teal"
                                    BorderColor="White"
                                    TextColor="White"
                                    CheckedBackgroundColor="LightGray"
                                    CheckedBorderColor="LightGray"
                                    CheckedTextColor="Teal" />
                <global:CheckButton Text="Hip!"
                                    WidthRequest="70" HeightRequest="30" CornerRadius="15" FontSize="12"
                                    BackgroundColor="Maroon"
                                    BorderColor="White"
                                    TextColor="White"
                                    CheckedBackgroundColor="LightGray"
                                    CheckedBorderColor="LightGray"
                                    CheckedTextColor="Maroon" />
                <global:CheckButton Text="Hop!"
                                    WidthRequest="70" HeightRequest="30" CornerRadius="15" FontSize="12"
                                    BackgroundColor="Navy"
                                    BorderColor="Navy"
                                    TextColor="White"
                                    CheckedBackgroundColor="LightGray"
                                    CheckedBorderColor="LightGray"
                                    CheckedTextColor="Navy" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="40">
                <global:CheckButton Text="Check it!"
                                    WidthRequest="70" HeightRequest="30"
                                    BackgroundColor="Teal"
                                    BorderColor="White"
                                    TextColor="White"
                                    CheckedBackgroundColor="LightGray"
                                    CheckedBorderColor="LightGray"
                                    CheckedTextColor="Teal" />
                <global:CheckButton Text="Hip!"
                                    WidthRequest="70" HeightRequest="30"
                                    BackgroundColor="Maroon"
                                    BorderColor="White"
                                    TextColor="White"
                                    CheckedBackgroundColor="LightGray"
                                    CheckedBorderColor="LightGray"
                                    CheckedTextColor="Maroon" />
                <global:CheckButton Text="Hop!"
                                    WidthRequest="70" HeightRequest="30"
                                    BackgroundColor="Navy"
                                    BorderColor="Navy"
                                    TextColor="White"
                                    CheckedBackgroundColor="LightGray"
                                    CheckedBorderColor="LightGray"
                                    CheckedTextColor="Navy" />
            </StackLayout>
            <!-- Simple CheckButtons -->

            <Label Text="Simple CheckButtons" FontSize="Small" TextColor="Gray"
                   HorizontalTextAlignment="Center" HorizontalOptions="Center" />
            <BoxView BackgroundColor="#eee" HeightRequest="1" Margin="0,10" />

        </StackLayout>
    </ScrollView>
</ContentPage>